{% extends 'base.html.twig' %}

{% block title %}Actividad{% endblock %}

{% block body %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
    <h1>Actividad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Título</th>
                <td>{{ n_activity.title }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ n_activity.description }}</td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td>{{ n_activity.place }}</td>

                <tr>
                    <th>Tipo</th>
                    <td>{{ n_activity.nta }}</td>
                </tr>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_n_activity_index') }}"><i class="fa fa-tasks"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_n_activity_edit', {'id': n_activity.id}) }}"><i class="fa fa-edit"></i></a>
    <a href="{{ path('app_xapi_activity', {'id': n_activity.id}) }}"><i class="fa fa-briefcase"></i></a>

    {{ include('n_activity/_delete_form.html.twig') }}

    {% endif %}

    </div>
    </section>
        </div>
{% endblock %}
