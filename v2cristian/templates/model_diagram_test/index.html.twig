{% extends 'base.html.twig' %}

{% block title %}Diagramas{% endblock %}

{% block body %}

 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <h1>Diagramas Realizados por Estudiantes</h1>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            <i class="icon fa fa-check"></i>
            {{ message }}
        </div>
        {% endfor %}
        <div class="card-body table-responsive p-0" style="height:auto;">
        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
        <thead>
            <tr>
                <th>Diagrama</th>
                <th>Creado por</th>
                <th>Curso</th>
                <th>Actividad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for model_diagram_test in model_diagram_tests %}
            <tr>
                <td><strong><i>{{ model_diagram_test.id }}</i></strong></td>  
                <td><strong><i>{{ model_diagram_test.action }}</i></strong></td>  
                <td><strong><i>{{ model_diagram_test.course }}</i></strong></td>  
                <td><strong><i>{{ model_diagram_test.nactivity }}</i></strong></td>
                <td>
                    <a class="btn btn-info btn-sm" href="http://localhost:80/v2cristian/public/GoJS-master/projects/pdf/diagrama.php?mode=view&table=model_diagram_test&id={{ model_diagram_test.id }}" >
                        Ver diagrama
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no hay  datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% if is_granted('ROLE_ADMIN') %}
<a class="btn btn-info btn-sm" href="http://localhost:80/v2cristian/public/GoJS-master/projects/pdf/diagrama.php" >
    Responder Actividad con Diagrama
</a>
{% endif %}
 </div>
</section>
    </div>
{% endblock %}